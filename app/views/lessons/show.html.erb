<% content_for(:title, @lesson.name + " | PROGRAMAJAMA") %>

<h1><%= @lesson.name %></h1>
<div class="panel panel-default">
  <div class="panel-body text-center">
    <iframe width="640", height="480", frameborder="0", src="<%= @lesson.video %>"></iframe>
  </div>
  <div class="panel-footer text-center">
    <p>
      <%= @lesson.body %>
    </p>
    <span style="float: left;"><%= link_to "Previous Lesson", lesson_path(@lesson.previous) %></span>
    <span style="float: right;"><%= link_to "Next Lesson", lesson_path(@lesson.next) %></span>
    <br>
  </div>


</div>
